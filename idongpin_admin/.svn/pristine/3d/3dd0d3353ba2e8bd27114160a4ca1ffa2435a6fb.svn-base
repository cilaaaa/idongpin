.table  thead td{
    color:white;
    font-family: '微软雅黑';
    font-size: 14px;
    background-color: #333333;
    border-right: 1px solid #555555;
}
.container-fluid .searchContent{
    margin-bottom: 10px;
    width: 100%;
    height: 40px;
}
.container-fluid .searchContent .add{
    border-radius: 5px;
    width: 80px;
    height: 30px;
    font-size: 14px;
    margin-left: 20px;
    font-family: 'Microsoft Yahei';
    color:#ffffff;
}
.container-fluid .searchContent #search{
    width: 250px;
    height: 30px;
    padding-left: 10px;
    line-height: 30px;
    border-radius: 5px;
    margin-top: 10px;
    color:#333333;
    border:1px solid #a1a1a1;

}
.container-fluid .searchContent .search{
    width: 80px;
    height: 30px;
    font-size: 16px;
    font-family: '微软雅黑';
}
.updateForm{
    width: 600px;
    height: 900px;
    display: none;
    background-color: #fafafa;
    border:1px solid #e1e1e1;
    border-radius: 5px;
    position: absolute;
    top: 50px;
    margin-left: 50%;
    left: -300px;
}
.updateForm .formHeader{
    width: 100%;
    height: 60px;
    line-height: 60px;
    border-bottom: 1px solid #a1a1a1;
}
.updateForm .formHeader .formTitle{
    font-family: '微软雅黑';
    font-size: 22px;
    display: inline-block;
    margin-left: 20px;
    float: left;
    color:#333333;
}
.updateForm .formHeader .closeForm{
    font-size: 18px;
    display: inline-block;
    float: right;
    margin-right: 20px;
    color:#666666;
}
.updateForm .formHeader .closeForm:hover{
    font-size: 22px;
    color:#000000;
    cursor: pointer;
}
.updateForm .Item{
     width: 100%;
     height: 30px;
     line-height: 30px;
     margin-top: 10px;
 }
.updateForm .Item a{
    text-decoration: none;
    color:#333333;
    font-size: 16px;
    font-family: '微软雅黑';
}
.updateForm .Item span{
    width: 30%;
    height: 30px;
    line-height: 30px;
    font-size: 16px;
    display: inline-block;
    float: left;
    text-align: right;
    color:#333333;
    font-family: '微软雅黑';
}
.updateForm .Item input{
    width:300px;
    text-align: left;
    border:1px solid #a1a1a1;
    padding-left: 10px;
    border-radius: 5px;
    display: inline-block;
    font-family: '微软雅黑';
    color:#333333;
}
.updateForm .Item .company_id{
    width: 80px;
    height: 30px;
    line-height: 30px;
    border: 1px solid #a1a1a1;
    border-radius: 5px;
    font-size: 16px;
    font-family: '微软雅黑';
}
.updateForm .Item .company_type{
    width: 100px;
    height: 30px;
    line-height: 30px;
    border: 1px solid #a1a1a1;
    border-radius: 5px;
    font-size: 16px;
    font-family: '微软雅黑';
}
.updateForm .Item .year{
    width: 70px;
    height: 30px;
    line-height: 30px;
    border: 1px solid #a1a1a1;
    border-radius: 5px;
    font-size: 16px;
    font-family: '微软雅黑';
}
.updateForm .Item .month,.day{
    width: 50px;
    height: 30px;
    line-height: 30px;
    border: 1px solid #a1a1a1;
    border-radius: 5px;
    font-size: 16px;
    font-family: '微软雅黑';
}
.updateForm .Item .recommendation,.advanced{
    width: 50px;
    height: 30px;
    line-height: 30px;
    border: 1px solid #a1a1a1;
    border-radius: 5px;
    font-size: 16px;
    font-family: '微软雅黑';
}
.updateForm .desc{
    width: 100%;
    height: 100px;
    margin-top: 10px;
}
.updateForm .desc span{
    width: 30%;
    text-align: right;
    display: inline-block;
    float: left;
    font-size: 16px;
    font-family: '微软雅黑';
}
.updateForm .desc .company_desc{
    width: 300px;
    height: 100px;
    border: 1px solid #a1a1a1;
    border-radius: 5px;
    color:#333333;
    padding: 10px;
    font-size: 14px;
    font-family: '微软雅黑';
}
.updateForm .submit{
    width: 300px;
    height: 40px;
    margin-top: 20px;
    font-size: 16px;
    letter-spacing: 20px;
    position: absolute;
    border-bottom: 20px;
    margin-left: 50%;
    left: -120px;
    font-family: '微软雅黑';
    cursor: pointer;
}
.container-fluid .formDisplay{
    display: block;
}