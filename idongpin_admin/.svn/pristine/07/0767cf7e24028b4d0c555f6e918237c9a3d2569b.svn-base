.updateForm{
    width: 100%;
    background-color: #fafafa;
    border-radius: 5px;
}
.updateForm .formHeader{
    width: 100%;
    height: 60px;
    line-height: 60px;
    border-bottom: 1px solid #a1a1a1;
}
.updateForm .formHeader .formTitle{
    font-family: '微软雅黑';
    font-size: 22px;
    display: inline-block;
    margin-left: 20px;
    float: left;
    color:#333333;
}
.tag{
    font-size: 18px;
    color:#efefef;
    display: inline-block;
    height: 50px;
    line-height: 50px;
    float: right;
}
.updateForm .formHeader .updating,.deleting,.saving,.canceling,.goback{
    font-family: '微软雅黑';
    font-size: 18px;
    display: inline-block;
    float: right;
    margin-right: 15px;
    color:#ffffff;
    margin-top: 10px;
}
.updateForm .formHeader .saving,.canceling{
    display: none;
}
.update .form-group{
     width: 60%;
     margin-right: 20%;
     margin-left: 20%;
 }