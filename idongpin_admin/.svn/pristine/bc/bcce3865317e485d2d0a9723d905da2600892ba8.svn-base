.second-menu{
    width: 100%;
    font-size: 12px;
    font-family: '微软雅黑';
}
.second-menu li{
    width: 100%;
    height: 30px;
    line-height: 30px;
    padding-right: 5px;
    padding-left: 10px;
    list-style: none;
}

.second-menu li a{
    display: block;
}
.second-menu li:hover,.second-menu li.active{
    color:#ffffff;
    background: #1e282c;
    border-left:3px solid #3c8dbc;
}

.second-menu li:hover a{
    color: #ffffff;
}
