
.userInfo{
	width: 780px;
	height: 100px;
	background: #ffffff;
}

.photo{
	width: 100px;
	height: 100px;
	float: left;
}

.photo img{
	width: 80px;
	height: 80px;
	margin: 10px;
}

.info{
	width: 540px;
	height: 100px;
	float: left;
}

.useName{
	width: 540px;
	height: 24px;
	margin-top: 10px;
	color: #4a4a4a;
	font-size: 14px;
	font-family: "Microsoft YaHei";
}

.orders{
	width: 540px;
	height: 24px;
	margin-top: 30px;
	color: #4a4a4a;
	font-size: 14px;
	font-family: "Microsoft YaHei";
}

.orderRelease{
	width: 140px;
	height: 100px;
	float: left;
}

.releaseBtn{
	width: 120px;
	height: 36px;
	background-color: rgba(22, 155, 213, 1);
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	-ms-border-radius: 5px;
	-o-border-radius: 5px;
	color: #ffffff;
	font-size: 16px;
	font-family: "Microsoft YaHei";
	margin: 10px;
	line-height: 36px;
	text-align: center;
	cursor: pointer;
}

.orderInfo{
	width: 780px;
	margin-top: 3px;
	background: #ffffff;
}

.recentOrder{
	width: 780px;
	height: 32px;
	box-sizing: border-box;
	padding: 0px 10px;
	line-height: 32px;
	color: #4a4a4a;
	font-size: 14px;
	font-family: "Microsoft YaHei";
}

.orderTab{
	width: 780px;
	border-collapse: collapse;
}

.orderID{
	width: 150px;
	color: #4a4a4a;
	font-size: 14px;
	line-height: 18px;
	font-family: "Microsoft YaHei";
	box-sizing: border-box;
	padding: 10px 0px;
	text-align: center;
}

.goodsName{
	width: 150px;
	color: #4a4a4a;
	font-size: 14px;
	line-height: 18px;
	font-family: "Microsoft YaHei";
	box-sizing: border-box;
	padding: 10px 0px;
	text-align: center;
}

.price,.count,.total,.freight{
	width: 70px;
	color: #4a4a4a;
	font-size: 14px;
	line-height: 18px;
	font-family: "Microsoft YaHei";
	box-sizing: border-box;
	padding: 10px 0px;
	text-align: center;
}

.operation{
	width: 200px;
	color: #4a4a4a;
	font-size: 14px;
	line-height: 16px;
	font-family: "Microsoft YaHei";
	box-sizing: border-box;
	padding: 10px 0px;
	text-align: center;
}

.cancel{
	display: inline-block;
	width: 64px;
	height: 24px;
	background-color: #e02341;
	border-radius: 3px;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	-ms-border-radius: 3px;
	-o-border-radius: 3px;
	color: #ffffff;
	line-height: 24px;
	text-align: center;
	cursor: pointer;
}

.finish{
	display: inline-block;
	width: 64px;
	height: 24px;
	margin-left: 10px;
	background-color: #e02341;
	border-radius: 3px;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	-ms-border-radius: 3px;
	-o-border-radius: 3px;
	color: #ffffff;
	line-height: 24px;
	text-align: center;
	cursor: pointer;
}