
.viwepager{
	width: 100%;
	height: 260px;
}

.banner{
    position: relative;
    width: 980px;
    height: 260px;
    z-index: 50;
    margin: 0 auto;
  }

  ul,li{
    list-style: none;
  }
  .image li{
    position: absolute;
    top: 0;
    left: 0;
    display: none;
    width: 100%;
    height: 100%;
  }

  .image li a img{
    width: 100%;
    height: 100%;
  }

  .shu{
    position: absolute;
    bottom: 20px;
    left: 0;
    width: 100%;
    text-align: center;
    font-size: 0;
    z-index: 999;
  }
  .shu ul{
    box-sizing: border-box;
    padding: 5px 10px;
    background: rgba(0,0,0,0.5);
    width: 120px;
    height: 20px;
    margin: 0 auto;
    border-radius: 10px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    -ms-border-radius: 10px;
    -o-border-radius: 10px;
  }
  .shu li{
    width: 10px;
    height: 10px;
    background: #5b534e;
    color: #fff;
    text-align: center;;
    line-height: 20px;
    font-size: 14px;
    border-radius: 50%;
    display: inline-block;
    margin: 0 5px;
  }

  .shu li.Imgactive{
    background: #ffffff;
    cursor: pointer;
  }


.goods{
    width: 980px;
    margin: 0 auto;
    padding-top: 33px;
    box-shadow: 0 0 20px #f2f6f7;
    -webkit-box-shadow: 0 0 40px #f2f6f7;
    -moz-box-shadow: 0 0 40px #f2f6f7;
    -ms-box-shadow: 0 0 40px #f2f6f7;
    -o-box-shadow: 0 0 40px #f2f6f7;
}

.goodsTeme{
    width: 910px;
    height: 44px;
    margin: 0 auto;
    border-bottom: 3px solid #ff6c00;
    padding: 10px 20px;
    padding-bottom: 0px;
}

.recomend{
    float: left;
    margin-top: 13px;
}

.hostGoods{
    color: #ff6c00;
    font-size: 22px;
    font-family: "Microsoft YaHei";
    line-height: 22px;
}

.spot,.purpose{
    color: #a1a1a1;
    font-size: 16px;
    font-family: "Microsoft YaHei";
}

.sort{
    float: right;
    margin-top: 13px;
}

.sortGoods{
    float: left;
    line-height: 31px;
}

.option{
    color: #4a4a4a;
    font-size: 14px;
    font-family: "Microsoft YaHei";
    float: left;
    height: 31px;
    padding: 0 7px;
}

.option:hover{
    cursor: pointer;
}

.optionActive{
    color: #ff6c00;
}

.choice{
    height: 26px
}

.choiceIcon{
    height: 5px;
    text-align: center; 
}

.choiceIcon img{
    display: none;
    width: 10px;
    height: 5px;
    float: left;
}

.sort span{
    float: left;
    color: #4a4a4a;
    font-size: 14px;
    font-family: "Microsoft YaHei";
}

.sort .more{
    color: #a1a1a1;
    font-size: 14px;
    font-family: "Microsoft YaHei";
    margin-left: 20px;
    line-height: 31px;
}

.content{
    width: 980px;
    margin: 0 auto;
    zoom: 1;
}

.goodsMode{
    display: none;
    width: 950px;
    margin: 0 auto;
    border-top: none;
    overflow: auto;
    zoom: 1;
    box-sizing: border-box;
    border-top: 1px solid #e8e8e8;
    border-left: 1px solid #e8e8e8;
}

.modeActive{
    display: block;
}

.content li{
    position: relative;
    width: 189.8px;
    height: 333.2px;
    float: left;
    box-sizing: border-box;
    padding: 20px;
    cursor: pointer;
    border-bottom: 1px solid #e8e8e8;
    border-right: 1px solid #e8e8e8;
}


.hotGoodsSign{
    position: absolute;
    top: 5px;
    right: 5px;
}
.hotGoodsSign img{
    width: 38px;
    height: 24px;
    right: 0;
}
.goodsImg{
    width: 149.8px;
    height: 149.8px;
    overflow: hidden;
}

.goodsImg img{
    width: 100%;
    height: 100%;
}

.goodsIntroduce{
    width: 149.8px;
    height: 33px;
    margin-top: 20px;
}

.goodsName{
    width: 149.8px;
    height: 15px;
    color: #4a4a4a;
    font-size: 14px;
    font-family: "Microsoft YaHei";
}

.goodsKind{
    width: 149.8px;
    height: 13px;
    color: #a1a1a1;
    font-size: 12px;
    font-family: "Microsoft YaHei";
    margin-top: 5px;
}

.goodsInfo{
    width: 149.8px;
    height: 39px;
    margin-top: 20px;
}

.priceNow{
    width: 149.8px;
    height: 21px;
    color: #a1a1a1;
    font-size: 14px;
    font-family: "Microsoft YaHei";
}

.now{
    color: #ff6c00;
    font-size: 22px;
    font-family: "Microsoft YaHei";
}

.price{
    color: #a1a1a1;
    font-size: 14px;
    font-family: "Microsoft YaHei";
}

.regularPrice{
    width: 148px;
    height: 12px;
    margin-top: 6px;
    color: #a1a1a1;
    font-size: 14px;
    font-family: "Microsoft YaHei";
    text-decoration: line-through;
}

.proUnitPrice{
    float: right;
}

.belong{
    width: 148px;
    height: 12px;
    margin-top: 10px;
}

.belong img{
    float: left;
    width: 13px;
    height: 13px;
    margin-top: -1px;
}

.company{
    float: left;
    margin-left: 10px;
    color: #a1a1a1;
    font-size: 12px;
    font-family: "Microsoft YaHei";
}

.address{
    float: right;
    color: #a1a1a1;
    font-size: 12px;
    font-family: "Microsoft YaHei";
}

.productionBusiness{
    width: 980px;
    margin: 0 auto;
    padding-top: 25px;
    padding-bottom: 20px;
}

.topTtlBar{
    width: 950px;
    height: 42px;
    border-bottom: 3px solid #ffa800;
    margin: 0 auto;
}

.topTtlBar div{
    width: 950px;
    height: 42px;
}

.superior{
    color: #ff6c00;
    font-size: 22px;
    font-family: "Microsoft YaHei";
    line-height: 22px;
}

.showBusiness{
    width: 949px;
    height: 240px;
    zoom: 1;
    border-top: 1px solid #e8e8e8;
    border-left: 1px solid #e8e8e8;
    margin: 0 auto;
}

.showBusiness:after{
    clear:both;
    content:'';
    display:block;
}

.business{
    width: 236.25px;
    height: 118px;
    float: left;
    border-right: 1px solid #e8e8e8;
    border-bottom: 1px solid #e8e8e8;
}

.business img{
    width: 100%;
    height: 100%;
}

.show_2{
    display: none;
}