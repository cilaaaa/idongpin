.header{
  width: 100%;
  min-width: 980px;
  height: 85px;
  border-bottom: 1px solid #ffffff;
  box-shadow: 0 0 20px #eaeceb;
  background: -webkit-linear-gradient(top,#f2f2f2 0,#ebebe9 100%);
  background: -moz-linear-gradient(top,#f2f2f2 0,#ebebe9 100%);
  background: -o-linear-gradient(top,#f2f2f2 0,#ebebe9 100%);
  background: linear-gradient(to bottom,#f2f2f2 0,#ebebe9 100%);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#f2f2f2,endColorstr=#ebebe9,GradientType=0);
}

.loginBar{
  width: 980px;
  height: 85px;
  margin: 0 auto;
}

.headerTitle{
  margin-top: 10px;
  margin-left: 15px;
  float: left;
  cursor: pointer;
}
.headerTitle img{
  width: 135px;
  height: 45px;
}
.msg{
  width: 135px;
  height: 26px;
  line-height: 26px;
  font-size: 12px;
  text-align: right;
  color: #666666;
  font-family: "微软雅黑";
}
.spacing{
  float: left;
  height: 38px;
  width: 1px;
  background: #555555;
  margin-top: 27px;
  margin-left: 20px;
}
.mainTitle{
  float: left;
  margin-top: 30px;
  margin-left: 20px;
  font-size: 22px;
  font-family: "微软雅黑";
  color: #4a4a4a;
}
.right{
  float: right;
  margin-top: 40px;
  margin-right: 15px;
}
.right a{
  text-decoration: none;
  color: #4a4a4a;
  font-family: '微软雅黑';
  font-size: 16px;
}
.float{
  float: left;
}
.content {
  width: 980px;
  position: fixed;
  margin-left: 50%;
  left: -490px;
}
.content .find {
  font-size: 22px;
  font-family: "微软雅黑";
  color: #e02341;
  display: inline-block;
  margin-top: 40px;
  margin-left: 289px;
}
.content .line {
  width: 440px;
  height: 3px;
  margin-top: 12px;
  background-color: #e02341;
  margin-left: 270px;
}
.content .phone {
  width: 440px;
  text-align: right;
  margin-left: 270px;
  display: inline-block;
  float: left;
}
.content .phone label {
  font-size: 16px;
  font-family: "微软雅黑";
  color: #a1a1a1;
}
.content .phone label a {
  font-size: 16px;
  color: #ff6c00;
}
.content .phone .button {
  width: 332px;
  height: 36px;
  color: #ffffff;
  background-color: #e02341;
  border:1px solid #e02341;
  font-family: "微软雅黑";
  font-size: 16px;
  text-align: center;
  cursor: pointer;
  letter-spacing: 15px;
}
.content .Item {
  width: 100%;
  height: 38px;
  margin-top: 10px;
  line-height: 38px;
}
.content .Item .has_error {
  border: 1px solid #ff6c00;
}
.content .Item span {
  color: #ff6c00;
  margin-left: 10px;
  margin-top: 10px;
}
.content .input {
  width: 320px;
  height: 35px;
  font-family: "微软雅黑";
  font-size: 14px;
  border:1px solid #a1a1a1;
  padding-left: 10px;
}
.content .tag {
  width: 26px;
  height: 26px;
  display: inline-block;
  margin-top: 5px;
  margin-left: 20px;
}
.content .message {
  width: 215px;
  height: 36px;
}
.content .getCode {
  width: 95px;
  height: 36px;
  line-height: 36px;
  color: #ffffff;
  text-align: center;
  font-size: 14px;
  display: inline-block;
  font-family: "微软雅黑";
  border: none;
  cursor: pointer;
  border:1px solid #e02341;
  background-color: #e02341;
}
.error_border_color {
  border: 1px solid #ff6c00;
}
.right_border_color {
  border: 1px solid #a1a1a1;
}
.Item .phone .btn_disabled{
  opacity: 0.5;
}
