*{
    margin: 0;
    padding: 0;
    outline: 0;
}
.clear{
    clear: both;
}
.displayNone{
    display: none;
}
.displayBlock{
    display: block;
}
.infoMain{
    box-sizing: border-box;
    margin-left: 28px;
    margin-right: 15px;
}
.infoTags{
    background: #FFFFFF;
    height: 115px;
    padding-top: 20px;
    box-sizing: border-box;
}
.countName{
    color: #3a3b3b;
    font-size: 14px;
    font-family: "Microsoft YaHei";
    height: 31px;
}
.countOpera{
    height: 35px;
    line-height: 35px;
    padding-left: 15px;
}
 .tagsName{
    margin-right: 30px;
     padding: 5px 0;
    color: #3a3b3b;
    font-size: 14px;
    font-family: "Microsoft YaHei";
     cursor: pointer;
}
 .tagsText{
    padding: 5px 0;
    color: #3a3b3b;
    font-size: 14px;
    font-family: "Microsoft YaHei";
     cursor: pointer;
}

.redSpan{
    border-bottom: 3px solid #ff6c00;
}
.infoDetails{
    padding: 0 15px ;
    background: #FFFFFF;
}
.head{
    width: 102px;
    float: left;
}
.head img{
    width: 72px;
    height: 72px;
    cursor: pointer;
}
.head a{
    display: block;
    width: 72px;
    text-align: center;
    padding-top: 7px;
    color: #585858;
    font-size: 14px;
    font-family: "Microsoft YaHei";
    cursor: pointer;
    text-decoration: underline;
}

.details{
    float: left;
}
.detailsC{
    float: left;
}
.Certification{
    height: 42px;
    line-height: 42px;
}
.Certification .a{
    margin-right: 10px;
    font-size: 14px;
    color: #3a3b3b;
    font-family: "Microsoft Yahei";

}
.Certification .b{
    color: #868686;
    font-size: 14px;
    font-family: "Microsoft Yahei";
}


.detailsItem{
    height: 45px;
    line-height: 45px;
}
.detailsItem .detailsItemName{
     font-size: 14px;
     font-family: "Microsoft Yahei";
     color: #3a3b3b;
 }
.detailsItem .detailsItemText{
    font-size: 14px;
    font-family: "Microsoft Yahei";
    color: #3a3b3b;
    padding-left: 10px;
}
.textTop{
    position: relative;
    top: 2px;
    margin-right: 5px;
}
.opera{
    height: 47px;
    line-height: 47px;
    padding-left: 240px;
    margin-top: 172px;
}

.opera span{
    display: inline-block;
    box-sizing: border-box;
    cursor: pointer;
    width: 100px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    margin-right: 10px;
    background-color:#ff6c00;
    border: 2px;
    border-radius: 4px;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    -ms-border-radius: 4px;
    -o-border-radius: 4px;
    color: #FFFFFF;
    font-family: "Microsoft Yahei";
    font-size: 14px;
}


/*弹窗*/

.editMode{
    display: none;
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 999;
    background: rgba(0,0,0,0.2);
    top: 0px;
    left: 0px;
}
.modeTable{
    display: table;
    width: 100%;
    height: 100%;
}
.modeCell{
    display:table-cell;
    vertical-align:middle;
    height: 100px;
    text-align: center;
}
 .modeMain{
    width: 600px;
    height: 450px;
    background: #FFFFFF;
    margin:  0 auto;
    position: relative;
    text-align: center;
}

.modeMain .modeHeader{
    text-align: left;
    padding:  0 20px ;
    height: 40px;
    line-height: 40px;
    color: #4a4a4a;
    font-size: 16px;
    font-family: "Microsoft Yahei";
    border-bottom: 2px solid  rgba(232,242,255,1);;
}

.modeHeader img{
    float: right;
    margin-top: 11px;
    width: 18px;
    height: 18px;
    cursor: pointer;
}
.modeContent{
    display: inline-block;
    margin:  0 auto;
    text-align: left;
    padding-top: 40px;
    padding-bottom: 40px;
}
.modeContent .modeItem{
    height: 40px;
    line-height: 40px;
    color: #4a4a4a;
    font-size: 14px;
    font-family: "Microsoft Yahei";
}
.itemLeft{
    float: left;
}
.typeSelect{
    height: 40px;
    width: 200px;
    float: left;
}

.typeHeader{
    height:30px;
    line-height: 30px;
    margin:  5px 0;
    border: 1px solid rgb(204, 204, 204);
    cursor: pointer;
}

.typeHeader >div{
    box-sizing: border-box;
    padding-left: 10px;
    width: 168px;
    height: 30px;
    line-height: 30px;
    float: left;
    white-space:nowrap;
    text-overflow:ellipsis;
    -o-text-overflow:ellipsis;
    overflow: hidden;

}
.typeHeader >div span{
    margin-right: 5px;
}

.typeHeader img{
    width: 30px;
    height: 30px;
    float: left;
}
.personalType{
    position: relative;
    display: none;
    background-color: #ffffff;
    margin-top: -5px;
    z-index: 999;
    border: 1px solid rgb(204, 204, 204);
    /*border-top: 0;*/
}

.personalType li{
    height: 30px;
    line-height: 30px;
    padding-left: 10px;
    cursor: pointer;
    /*border-top:1px solid rgb(204, 204, 204);*/
}
.personalType li:hover{
    background: #f2f2f2;
}

.itemInput{
    height: 30px;
    width: 200px;
    border: 1px solid rgb(204, 204, 204);

    color: #4a4a4a;
    font-size: 14px;
    font-family: "Microsoft Yahei";
    padding-left: 10px;
    box-sizing: border-box;
}
.modeFooter .btn_click{
    padding: 10px 0;
    font-size: 14px;
    font-family: "Microsoft Yahei";
}
.btnCancel,.btnSave{
    display: inline-block;
    width: 64px;
    height: 24px;
    background-color: #e02341;
    border-radius: 3px;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    -ms-border-radius: 3px;
    -o-border-radius: 3px;
    color: #ffffff;
    line-height: 24px;
    text-align: center;
    cursor: pointer;
    border: 0;
}

.btnSave{
    margin-left: 10px;
}
.companyMode{
    display: none;
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 999;
    background: rgba(0,0,0,0.2);
    top: 0px;
    left: 0px;
}
.companyMode .modeMain{
    height: 490px;
}
.industryCheck{
    float: right;
    width: 13px;
    height: 13px;
    margin-top: 8.5px;
    margin-right: 10px;
    cursor: pointer;
}
/*主营行业样式*/
.industryConfirm,.industryCancel{
    float: left;
    text-align: center;
    height: 30px;
    line-height: 30px;
    width: 50%;
    background-color: #ffffff;
    margin: 5px 0;
}
.industryConfirm span,.industryCancel span{
    display: inline-block;
    width: 60px;
    height: 20px;
    line-height: 20px;
    background-color: #e02341;
    border-radius: 3px;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    -ms-border-radius: 3px;
    -o-border-radius: 3px;
    color: #ffffff;
    text-align: center;
    cursor: pointer;
}
.productSelect .personalType{
    z-index: 990;
}
/*弹窗*/

.w2{
    letter-spacing:2em; /*如果需要y个字两端对齐，则为(x-y)/(y-1),这里是（4-2）/(2-1)=2em */
    margin-right:-1.5em; /*同上*/
}
.w3{
    letter-spacing:0.5em; /*如果需要y个字两端对齐，则为(x-y)/(y-1),这里是（4-3）/(3-1)=0.5em */
    /*margin-right:-1.5em; !*同上*!*/
}
.w4{
    margin-right: 0.5em;
}
