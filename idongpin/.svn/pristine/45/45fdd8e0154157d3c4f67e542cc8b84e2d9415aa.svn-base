.container{
	width: 980px;
	margin: 0 auto;
	box-shadow: 0 0 20px #f2f6f7;
    -webkit-box-shadow: 0 0 40px #f2f6f7;
    -moz-box-shadow: 0 0 40px #f2f6f7;
    -ms-box-shadow: 0 0 40px #f2f6f7;
    -o-box-shadow: 0 0 40px #f2f6f7;
}

.orderReleased{
	width: 950px;
	margin: 0 auto;
	margin-top: 10px;
}

.orders{
	width: 950px;
	height: 217px;
	margin-bottom: 20px;
}

.orderLeft{
	width: 470px;
	height: 217px;
	float: left;
	border: 1px solid #e8e8e8;
}

.orderLeft:hover{
	border: 1px solid #ffa800;
}

.orderRight{
	width: 470px;
	height: 217px;
	float: right;
	border: 1px solid #e8e8e8;
}

.orderRight:hover{
	border: 1px solid #ffa800;
}

.orderInfo{
	width: 349px;
	height: 217px;
	float: left;
}

.rightAway{
	width: 119px;
	height: 217px;
	float: right;
	position: relative;
}

.orderTheme{
	width: 349px;
	height: 58px;
	line-height: 58px;
	color: #4a4a4a;
	font-size: 20px;
	font-family: "Microsoft YaHei";
	box-sizing: border-box;
	padding: 0 20px;
}

.need{
	width: 349px;
	height: 32px;
	line-height: 32px;
	color: #4a4a4a;
	font-size: 14px;
	font-family: "Microsoft YaHei";
	box-sizing: border-box;
	padding: 0 20px;
}

.expirationDate{
	width: 349px;
	height: 24px;
	line-height: 24px;
	color: #a1a1a1;
	font-size: 14px;
	font-family: "Microsoft YaHei";
	box-sizing: border-box;
	padding: 0 20px;	
}

.sourceArea{
	width: 349px;
	height: 32px;
	line-height: 32px;
	color: #a1a1a1;
	font-size: 14px;
	font-family: "Microsoft YaHei";
	box-sizing: border-box;
	padding: 0 20px;
}

.otherNeed{
	width: 349px;
	height: 24px;
