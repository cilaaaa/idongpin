.footer {
    height: 122px;
    width: 980px;
    position: absolute;
    bottom: 0;
    margin-left: 50%;
    left: -490px;
    border-top: 3px solid #C02341;
    background-color: #f2f6f7;
    box-shadow: 0 0 20px #f2f6f7;
    -webkit-box-shadow: 0 0 40px #f2f6f7;
    -moz-box-shadow: 0 0 40px #f2f6f7;
    -ms-box-shadow: 0 0 40px #f2f6f7;
    -o-box-shadow: 0 0 40px #f2f6f7;
    text-align: center;
}
.footer .flag {
    width: 440px;
    height: 42px;
    margin: 22px auto;
}
.footer .flag .link {
    display: inline-block;
}
.footer .flag .link li {
    display: inline;
    float: left;
    margin-right: 6px;
    font-size: 12px;
    color: #a1a1a1;
    font-family: "微软雅黑";
}
.footer .flag .link li a {
    text-decoration: none;
    color: #a1a1a1;
}
.footer .flag .copyright {
    font-size: 12px;
    color: #a1a1a1;
    font-family: "微软雅黑";
    text-align: left;
    margin-top: 8px;
}