.logo{
    width: 213px;
    margin-right: 70px;
}
.logo img{
    width: 180px;
    height: 62px;
}
.nature{
    width: 180px;
    height: 16px;
    color: #666666;
    font-size: 16px;
    font-family: "Microsoft YaHei";
    letter-spacing: 2px;
    padding: 0px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
}

