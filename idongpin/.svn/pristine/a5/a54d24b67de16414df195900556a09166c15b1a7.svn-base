
.topMode{
	width: 780px;
	height: 180px;
	background: #ffffff;
}

.selectOrderTime{
	width: 780px;
	height: 32px;
}

.selectDate{
	display: inline-block;
	height: 30px;
	line-height: 32px;
	border-bottom: 2px solid #ffffff;
	margin: 0px 10px;
	color: #4a4a4a;
	font-size: 16px;
	font-family: "Microsoft YaHei";
	cursor: pointer;
}

.selectDateActive{
	color: #e02341;
	border-bottom: 2px solid #e02341;
}

.orderInfoSearch{
	width: 780px;
	height: 96px;
}

.conditions{
	width: 780px;
	height: 48px;
}

.condition{
	width: 250px;
	height: 48px;
	line-height: 48px;
	display: inline-block;
}

.infoTtl{
	display: inline-block;
	width: 100px;
	height: 48px;
	line-height: 48px;
	text-align: right;
	color: #4a4a4a;
	font-size: 14px;
	font-family: "Microsoft YaHei";
}

.infoVal{
	display: inline-block;
	width: 150px;
	height: 32px;
	line-height: 32px;
	text-align: left;
	color: #4a4a4a;
	font-size: 14px;
	font-family: "Microsoft YaHei";
	box-sizing: border-box;
	padding: 0 10px;
}

.spacing{
	margin: 0 47px;
	height: 48px;
	line-height: 48px;
	color: #4a4a4a;
	font-size: 14px;
	font-family: "Microsoft YaHei";
}

.conditionSearch{
	margin-left: 150px;
	cursor: pointer;
}

.conditionSearchBtn{
	display: inline-block;
	width: 100px;
	height: 32px;
	border: none;
	background: none;
	background:  #e02341;
	color: #ffffff;
	font-size: 16px;
	font-family: "Microsoft YaHei";
	line-height: 32px;
	text-align: center;
	cursor: pointer;
}

.selectOrderStatus{
	width: 780px;
	height: 52px;
	line-height: 48px;
}

.status{
	display: inline-block;
	width: 72px;
	height: 28px;
	background: #e02341; 
	border-radius: 5px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	-ms-border-radius: 5px;
	-o-border-radius: 5px;
	text-align: center;
	line-height: 28px;
	margin-left: 20px;
	color: #ffffff;
	font-size: 16px;
	font-family: "Microsoft YaHei";
	cursor: pointer;
}

.afterThreeMonth{
	width: 780px;
	background: #ffffff;
	margin-top: 3px;
}

.beforeThreeMonth{
	width: 780px;
	background: #ffffff;
	margin-top: 3px;
	display: none;
}

.orderTab{
	width: 780px;
	border-collapse: collapse;
}

.orderID{
	width: 150px;
	color: #4a4a4a;
	font-size: 14px;
	line-height: 18px;
	font-family: "Microsoft YaHei";
	box-sizing: border-box;
	padding: 10px 0px;
	text-align: center;
}

.goodsName{
	width: 150px;
	color: #4a4a4a;
	font-size: 14px;
	line-height: 18px;
	font-family: "Microsoft YaHei";
	box-sizing: border-box;
	padding: 10px 0px;
	text-align: center;
}

.price,.count,.total,.freight{
	width: 70px;
	color: #4a4a4a;
	font-size: 14px;
	line-height: 18px;
	font-family: "Microsoft YaHei";
	box-sizing: border-box;
	padding: 10px 0px;
	text-align: center;
}

.operation{
	width: 200px;
	color: #4a4a4a;
	font-size: 14px;
	line-height: 16px;
	font-family: "Microsoft YaHei";
	box-sizing: border-box;
	padding: 10px 0px;
	text-align: center;
}

.cancel{
	display: inline-block;
	width: 64px;
	height: 24px;
	background-color: #e02341;
	border-radius: 3px;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	-ms-border-radius: 3px;
	-o-border-radius: 3px;
	color: #ffffff;
	line-height: 24px;
	text-align: center;
	cursor: pointer;
}

.finish{
	display: inline-block;
	width: 64px;
	height: 24px;
	margin-left: 10px;
	background-color: #e02341;
	border-radius: 3px;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	-ms-border-radius: 3px;
	-o-border-radius: 3px;
	color: #ffffff;
	line-height: 24px;
	text-align: center;
	cursor: pointer;
}