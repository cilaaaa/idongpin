body{
	min-height: 0px;
}

.footer{
	display: none;
}

.container{
	width: 980px;
	margin: 0 auto;
	box-shadow: 0 0 20px #f2f6f7;
    -webkit-box-shadow: 0 0 40px #f2f6f7;
    -moz-box-shadow: 0 0 40px #f2f6f7;
    -ms-box-shadow: 0 0 40px #f2f6f7;
    -o-box-shadow: 0 0 40px #f2f6f7;
}

.leftSide{
	float: left;
	width: 174px;
	background: #ffffff;
	box-sizing: border-box;
	padding: 10px 0px;
	font-family: "Microsoft YaHei";
}

.tradeManage{
	font-size: 16px;
	line-height: 20px;
	text-align: center;
	margin: 10px 0px;
	color: #3a3b3b;
	cursor: pointer;
}

.tradeMenu{
	line-height: 20px;
	margin: 15px 0px;
	margin-left: 70px;
}

.tradeMenu li{
	margin: 5px 0px;
	text-align: left;
	font-size: 14px;
	color: #585858;
}

.tradeMenu li a:hover{
	color: #ff6c00;
}

.tradeImg{
	margin-right: 16px;
}

.vipCenter{
	font-size: 16px;
	line-height: 20px;
	text-align: center;
	margin: 10px 0px;
	color: #3a3b3b;
	cursor: pointer;
}

.vipMenu{
	line-height: 20px;
	margin: 15px 0px;
	margin-left: 70px;
}

.vipMenu li{
	margin: 5px 0px;
	text-align: left;
	font-size: 14px;
	color: #585858;
}

.vipMenu li a:hover{
	color: #ff6c00;
}

.vipImg{
	margin-right: 16px;
}

.rightSide{
	float: left;
	width: 805px;
	border-left: 1px solid #e8e8e8;
}