*{
    margin: 0;
    padding: 0;
    outline: 0;
}
.clear{
    clear: both;
}
.displayNone{
    display: none;
}
.displayBlock{
    display: block;
}
.infoMain{
    box-sizing: border-box;
    padding-left: 28px;
    padding-right: 15px;
}
.infoTags{
    background: #FFFFFF;
    height: 122px;
    padding-top: 20px;
    box-sizing: border-box;
}
.infoTagsName{
    height: 31px;
    color: #3a3b3b;
    font-size: 14px;
    font-family: "Microsoft YaHei";
}
.infoLevel{
    height: 36px;
    padding-left: 15px;
}
.tagsName{
    height: 33px;
    line-height: 33px;
    float: left;
    color: #585858;
    font-size: 14px;
    font-family: "Microsoft YaHei";
}
.tagsText {
    float: left;
    height: 36px;
    width: 200px;
    line-height: 36px;
}
.tagsTextT{
     height: 33px;
     line-height: 33px;
     color: #e31e3c;
     font-size: 14px;
     font-family: "Microsoft YaHei";
 }
.tagsText .tagsTextB{
    height: 3px;
}
.tagsTextBDiv{
    float: left;
    width: 29px;
    height: 3px;
    margin-right: 1px;
    background-color:#bbbbbb ;
}
.tagsTextBDivRed{
    background-color:#e31e3c ;
}


.infoDetails{
    padding: 0 15px ;
    background: #FFFFFF;
}
.head{
}
.headImg{
    width: 106px;
    float: left;
}
.headImg img{
    width: 64px;
    height: 64px;
    cursor: pointer;
}
.Certification{
    float: left;
}
.CertificationIDP{
    height: 40px;
    line-height: 40px;
}
.CertificationName{
    font-size: 14px;
    color: #3a3b3b;
    font-family: "Microsoft Yahei";
}
.CertificationText{
    font-size: 14px;
    color: #585858;
    font-family: "Microsoft Yahei";
}
.Certification .a{
    margin-right: 10px;
    font-size: 14px;
    color: #3a3b3b;
    font-family: "Microsoft Yahei";

}
.Certification .b{
    color: #868686;
    font-size: 14px;
    font-family: "Microsoft Yahei";
}

.details{
    padding-top: 34px;
}

.detailsItem{
    height: 61px;
}

.detailsItemImg{
    width: 48px;
    float: left;
}
.detailsItemImg img{
    width: 27px;
    height: 27px;
}
.detailsItemContent{
    width: 520px;
    float: left;
}
.detailsItemContent .contentTop{
    height: 27px;
    color: #3a3b3b;
    font-size: 16px;
    font-family: "Microsoft Yahei";
}
.detailsItemContent .contentBottom{
    color: #868686;
    font-size: 12px;
    font-family: "Microsoft Yahei";
}

.contentBottom a{
    float: right;
}

.contentBottom span{
    float: left;
}