.goodsPs .goodsSales{
    width: 100px;
    height: 20px;
    text-align: center;
    background: rgba(0,0,0,0.2);
    border-radius: 3px;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    -ms-border-radius: 3px;
    -o-border-radius: 3px;
    font-size: 14px;
    font-family: "Microsoft YaHei";
    color: #ffffff ;
}
.goodsBottom img{
    float: left;
    width: 100%;
}

