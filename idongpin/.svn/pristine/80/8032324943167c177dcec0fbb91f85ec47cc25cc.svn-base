*{
    margin: 0;
    padding: 0;
    outline: 0;
}
.clear{
    clear: both;
}
.groupContent{
    width: 980px;
    padding: 0 10px;
    padding-top: 20px;
    margin: 0 auto;
    box-sizing: border-box;
    box-shadow: 0 0 20px #f2f6f7;
    -webkit-box-shadow: 0 -20px 40px #f2f6f7;
    -moz-box-shadow: 0 -20px 40px #f2f6f7;
    -ms-box-shadow: 0 -20px 40px #f2f6f7;
    -o-box-shadow: 0 -20px 40px #f2f6f7;
}
.groupContent ul li{
    float: left;
    list-style: none;
    width: 480px;
    height: 270px;
    box-sizing: border-box;
    padding: 10px 5px;
    border: solid 1px #ffffff;
}

.groupContent ul li:hover{
	border: solid #ffa401 1px;
}

.goodsTop{
    height: 200px;
}
.goodsImg{
    width: 190px;
    height: inherit;
    position: relative;
    float: left;
    box-sizing: border-box;
    padding: 20px;
    background-color:#f8f8f8 ;
}
.goodsImg img{
    width: 150px;
    height: 150px;
}
.goodsImg .goodsImgText{
    display: none;
    position: absolute;
    height: 150px;
    width: 150px;
    top: 20px;
    left: 20px;
    background-color: rgba(0,0,0,0.5);
}
.goodsImgText .goodsImgTextTop{
    height: 20px;
    line-height: 20px;
    padding-top: 45px;
    text-align: center;
    font-size: 14px;
    font-family: "Microsoft YaHei";
    color: #ffffff;
}
.goodsImgText .goodsImgTextBottom{
    text-align: center;
    font-size: 12px;
    font-family: "Microsoft YaHei";
   color: #ffffff;
}
.goodsImgRight{
    float: left;
    padding-left: 40px;
}

.goodsName{
    height: 45px;
    box-sizing: border-box;
    padding-top: 15px;
    font-size: 20px;
    font-family: "Microsoft YaHei";
    color: #4a4a4a;
}

.goodsDetails{
    height: 22px;
    line-height: 22px;
}
.goodsDetails .goodsDetailsName{
    /*width: 70px;*/
    font-size: 14px;
    font-family: "Microsoft YaHei";
    color: #a1a1a1;
    width: 4em;
}

.goodsDetails .goodsDetailsText{
    margin-left: 0.5em;
    font-size: 14px;
    font-family: "Microsoft YaHei";
    color: #4a4a4a ;
}

span.goods_price_red {
    color: #e02341;
    display: block;
    float: left;
    margin-top: 20px;
    font-size: 26px;
    font-weight: 700;
    padding-left: 38px;
    font-family: regular;
}

span.goods_price_gre {
    display: block;
    float: left;
    margin-top: 27px;
    margin-left: 20px;
    font-size: 12px;
    color: #a1a1a1;
    font-weight: bolder;
    text-decoration: line-through;
}
.goodsBottom{
    height: 55px;
    background-color: #f8f8f8;
    border: solid #f0f0f0 0.5px;
}

.bottom_box {
    width: 60%;
    padding-top: 5px;
    height: inherit;
    float: left;
}

span.sell_percent {
    font-size: 10px;
    display: block;
    float: left;
    margin: 7px;
    margin-left: 15px;
    color: #7b7b7b;
}

span.sell_quantity {
    font-size: 10px;
    display: block;
    float: right;
    margin: 7px;
    color: #7b7b7b;
    
}

.progress_bar {
    height: 15px;
    border: solid #a1a1a1 1px;
    border-radius: 20px;
    margin-top: 25px;
    margin-left: 10px;
}

.rob_box {
    float: right;
    width: 32%;
    margin-right: 10px;
    padding-top: 10px;
}

