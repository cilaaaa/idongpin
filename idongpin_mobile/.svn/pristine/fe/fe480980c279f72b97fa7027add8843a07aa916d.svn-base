@bodyBgColor:#f5f5f5;
@themeColor: #e02341;
@baseColor: #4d4d4d;
@contentColor: #ffffff;
@textColor: #999999;
@borderColor: #e8e8e8;
@infoColor: #1a1a1a;
.font-size(@font-size){
	[data-dpr="1"] & {
		font-size: @font-size;
	}
	[data-dpr="2"] & {
		font-size:@font-size*2;
	}
	[data-dpr="3"] & {
		font-size:@font-size*3;
	}
}
.font-family{
	font-family: "Microsoft YaHei";
}

body{
	background: @bodyBgColor;
}
.header{
	width: 100%;
	height: 1.18rem;
	line-height: 1.18rem;
	text-align: center;
	background: @themeColor;
	position: relative;
	.back{
		position: absolute;
	    left: 0.43rem;
	    display: inline-block;
	    width: 0.32rem;
	    height: 0.56rem;
	    margin-top: 0.31rem;
		img{
			width: 0.32rem;
			height: 0.56rem;
			float: left;
		}
	}
	.page_ttl{
		color: #ffffff;
		.font-size(18px);
		.font-family;
	}
	.edit{
		position: absolute;
	    right: 0.43rem;
	    display: inline-block;
	    height: 0.56rem;
	    line-height: 0.56rem;
	    margin-top: 0.31rem;
	    color: @contentColor;
	    .font-size(15px);
	    .font-family;
	}
}

.content{
	width: 100%;
	margin-bottom: 1.53rem;
	.container{
		width: 10rem;
		margin: 0 auto;
		.goodsList{
			width: 10rem;
			background: @contentColor;
			.goods{
				width: 10rem;
				box-sizing: border-box;
				padding: 0 0.43rem;
				padding-top: 0.37rem;
				padding-bottom: 0.43rem;
				border-bottom: 0.02rem solid @borderColor;
			}
		}
	}
}