.header {
  height: 1.12rem;
  width: 100%;
  margin: 0 auto;
  background-color: #e02341;
}
.header .header_content {
  height: 100%;
  line-height: 1.12rem;
  text-align: center;
  color: #ffffff;
  font-family: "Microsoft YaHei";
}
[data-dpr="1"] .header .header_content {
  font-size: 18px;
}
[data-dpr="2"] .header .header_content {
  font-size: 36px;
}
[data-dpr="3"] .header .header_content {
  font-size: 54px;
}
.kinds {
  height: 1.2rem;
  width: 100%;
}
.kinds ul.kind_data {
  width: 100%;
  height: 100%;
  line-height: 1.2rem;
}
.kinds ul.kind_data li {
  width: 16.66%;
  float: left;
  text-align: center;
}
.kinds ul.kind_data li a {
  color: #1a1a1a;
  text-align: center;
  font-family: "Microsoft YaHei";
}
[data-dpr="1"] .kinds ul.kind_data li a {
  font-size: 18px;
}
[data-dpr="2"] .kinds ul.kind_data li a {
  font-size: 36px;
}
[data-dpr="3"] .kinds ul.kind_data li a {
  font-size: 54px;
}
