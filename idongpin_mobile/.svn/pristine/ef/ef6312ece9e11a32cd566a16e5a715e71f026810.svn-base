.font-family {
  font-family: "Microsoft YaHei";
}
.footer {
  width: 100%;
  height: 1.32rem;
  border-top: 1px solid #999999;
  position: fixed;
  bottom: 0px;
}
.footer .modeMenu {
  width: 25%;
  height: 1.32rem;
  float: left;
  text-align: center;
}
.footer .modeMenu a {
  display: block;
}
.footer .modeMenu a img {
  height: 0.62rem;
  margin-top: 0.17rem;
}
.footer .modeMenu a span {
  display: block;
  color: #999999;
  font-family: "Microsoft YaHei";
}
[data-dpr="1"] .footer .modeMenu a span {
  font-size: 12px;
}
[data-dpr="2"] .footer .modeMenu a span {
  font-size: 24px;
}
[data-dpr="3"] .footer .modeMenu a span {
  font-size: 36px;
}
.footer .modeMenu a .spanActive {
  color: #e02341;
}
.footer .clear {
  clear: both;
}
