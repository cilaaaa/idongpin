html{
    width: 100%;
    height: 100%;
}

body{
    width: 100%;
    height: 100%;
    background: url('../../images/auth/bg_pic.png') top center no-repeat ;
    background-size: 100% 100%;
    background-attachment: fixed;
}

.registe_content{
    width: 9rem;
    height: 14rem;
    margin: 0 auto;
    box-sizing: border-box;
    padding-top: 3rem;
}

.go_login{
    width: 9rem;
    height: 1rem;
    line-height: 1rem;
    text-align: right;
    position:absolute;
    top: 0.2rem;
    a{
        color: #ffffff;
        .font-size(14px);
        font-family: "Microsoft YaHei";
        .goto{
            font-family: "goto";
        }
    }
}

.company_logo{
    width: 6rem;
    margin: 0 auto;
    img{
        width: 6rem;
    }
}

.form_control{
    margin-top: 1.5rem;
    .verification_code{
        width: 6rem;
        height: 1.25rem;
        border-bottom: 1px solid #ffffff;
        text-align: center;
        line-height: 1.25rem;
        float: left;
        .code_icon{
            color: #ffffff;
            .font-size(14px);
            font-family: "verification_code";
        }
        .code_input{
            width: 3rem;
            height: 1rem;
            border: none;
            background: none;
            box-sizing: border-box;
            padding: 0px 20px;
            color: #ffffff;
            .font-size(14px);
            font-family: "Microsoft YaHei";
            &::-webkit-input-placeholder{
                color: #ffffff;
            }
        }
    }
    .phone_number,.user_pwd,.user_pwd_confirm{
        width: 9rem;
        height: 1.25rem;
        border-bottom: 1px solid #ffffff;
        text-align: center;
        line-height: 1.25rem;
        .user_con{
            color: #ffffff;
            .font-size(14px);
            font-family: "user";    
        }
       
        .pwd_icon{
            color: #ffffff;
            .font-size(14px);
            font-family: "pwd";
            }
        .number_input,.pwd_input,.pwd_confirm_input,{
            width: 6rem;
            height: 1rem;
            border: none;
            background: none;
            box-sizing: border-box;
            padding: 0px 20px;
            color: #ffffff;
            .font-size(14px);
            font-family: "Microsoft YaHei";
            &::-webkit-input-placeholder{
                color: #ffffff;
            }
        }
    } 
     
    .get_code{
        width: 3rem;
        height: 2rem;
        float: right;
        text-align: center;
        line-height: 2rem;
        .font-size(16px);
        color: #fff;
    } 

    .register{
        width: 9rem;
        height: 1.25rem;
        margin-top: 2rem;
        .register_btn{
            display: block;
            width: 7rem;
            height: 1.25rem;
            margin: 0 auto;
            line-height: 1.25rem;
            text-align: center;
            border-radius: 0.625rem;
            color: #ffffff;
            .font-size(16px);
            font-family: "Microsoft YaHei";
            background: none;
            border: none;
            background: #64bfc4;
        }
    }
    
    .user_agreement {
    margin: 0 auto;
    width: 3.5rem;
    padding-top: 0.5rem;
    .font-size(14px);
    color: #ffffff;
        input[type="checkbox"] {
            width: 3vw;
            height: 3vw;
        }
    }
}