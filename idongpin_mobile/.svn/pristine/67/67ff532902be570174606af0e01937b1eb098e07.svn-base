.font-family {
  font-family: "Microsoft YaHei";
}
body {
  background: #f5f5f5;
}
.header {
  width: 100%;
  height: 1.12rem;
  background: #e02341;
  box-sizing: border-box;
  padding-top: 0.18rem;
}
.header .header_content {
  width: 10rem;
  height: 0.74rem;
  marign: 0 auto;
}
.header .header_content .location {
  width: 2.77rem;
  height: 0.74rem;
  float: left;
}
.header .header_content .location .location_icon {
  wdith: 0.48rem;
  height: 0.6rem;
  float: left;
  margin-left: 0.42rem;
  margin-top: 0.04rem;
}
.header .header_content .location .location_address {
  width: 1.07rem;
  height: 0.74rem;
  line-height: 0.74rem;
  float: left;
  color: #ffffff;
  font-family: "Microsoft YaHei";
  margin-left: 0.11rem;
}
[data-dpr="1"] .header .header_content .location .location_address {
  font-size: 17px;
}
[data-dpr="2"] .header .header_content .location .location_address {
  font-size: 34px;
}
[data-dpr="3"] .header .header_content .location .location_address {
  font-size: 51px;
}
.header .header_content .location .address_dropdown {
  width: 0.38rem;
  height: 0.2rem;
  float: left;
  margin-top: 0.3rem;
}
.header .header_content .search_box {
  width: 5.66rem;
  height: 0.74rem;
  line-height: 0.74rem;
  float: left;
  background: #b31c34;
  border-radius: 0.05rem;
}
.header .header_content .search_box .search_icon {
  width: 0.44rem;
  height: 0.44rem;
  float: left;
  margin-left: 0.2rem;
  margin-top: 0.15rem;
}
.header .header_content .search_box .search_keyword {
  float: left;
  margin-left: 0.4rem;
  color: #ffffff;
  font-family: "Microsoft YaHei";
}
[data-dpr="1"] .header .header_content .search_box .search_keyword {
  font-size: 17px;
}
[data-dpr="2"] .header .header_content .search_box .search_keyword {
  font-size: 34px;
}
[data-dpr="3"] .header .header_content .search_box .search_keyword {
  font-size: 51px;
}
.header .header_content .news {
  width: 1.57rem;
  height: 0.74rem;
  float: left;
}
.header .header_content .news .news_icon {
  width: 0.63rem;
  height: 0.63rem;
  margin-left: 0.31rem;
  margin-top: 0.04rem;
  position: relative;
}
.header .header_content .news .news_icon .news_pic {
  width: 0.63rem;
  height: 0.63rem;
}
.header .header_content .news .news_icon .news_count {
  width: 0.42rem;
  height: 0.42rem;
  text-align: center;
  line-height: 0.42rem;
  color: #b31c34;
  font-family: "Microsoft YaHei";
  position: absolute;
  left: 0.47rem;
  top: -0.14rem;
  background: url('../../images/index/newsCount_bg.png') top center no-repeat;
  background-size: 0.42rem 0.42rem;
}
[data-dpr="1"] .header .header_content .news .news_icon .news_count {
  font-size: 12px;
}
[data-dpr="2"] .header .header_content .news .news_icon .news_count {
  font-size: 24px;
}
[data-dpr="3"] .header .header_content .news .news_icon .news_count {
  font-size: 36px;
}
.content {
  width: 100%;
}
.content .container {
  width: 10rem;
  margin: 0 auto;
}
.content .container .slider {
  width: 10rem;
}
.content .container .slider img {
  width: 10rem;
}
.content .container .menu {
  width: 10rem;
  height: 2rem;
  background: #ffffff;
}
.content .container .menu ul {
  width: 9.96rem;
  height: 2rem;
  margin: 0 auto;
}
.content .container .menu ul .classify {
  width: 1.66rem;
  height: 2rem;
  float: left;
}
.content .container .menu ul .classify a {
  display: block;
  text-align: center;
}
.content .container .menu ul .classify a img {
  width: 1.06rem;
  height: 1.06rem;
  margin-top: 0.26rem;
}
.content .container .menu ul .classify a span {
  display: block;
  color: #676767;
  font-family: "Microsoft YaHei";
}
[data-dpr="1"] .content .container .menu ul .classify a span {
  font-size: 12px;
}
[data-dpr="2"] .content .container .menu ul .classify a span {
  font-size: 24px;
}
[data-dpr="3"] .content .container .menu ul .classify a span {
  font-size: 36px;
}
.content .container .menu ul .clear {
  clear: both;
}
.content .container .discount {
  width: 10rem;
  margin-top: 0.21rem;
}
.content .container .discount .slogan {
  width: 4.49rem;
  height: 4.18rem;
  float: left;
  background: url('../../images/index/discount.png') top center no-repeat;
  background-size: 4.49rem 4.18rem;
}
.content .container .discount .slogan a {
  display: block;
  width: 100%;
  height: 100%;
}
.content .container .discount .discountGoods {
  width: 5.5rem;
  height: 4.18rem;
  float: right;
}
.content .container .discount .discountGoods .dailyLowPrice {
  width: 5.5rem;
  height: 2.07rem;
  background: url('../../images/index/dailyLowPrice.png') top center no-repeat;
  background-size: 5.5rem 2.07rem;
}
.content .container .discount .discountGoods .dailyLowPrice a {
  display: block;
  width: 100%;
  height: 100%;
}
.content .container .discount .discountGoods .privilege {
  width: 5.5rem;
  height: 2.1rem;
  margin-top: 0.01rem;
}
.content .container .discount .discountGoods .privilege .hotSale {
  width: 2.73rem;
  height: 2.1rem;
  float: left;
  background: url('../../images/index/hotSale.png') top center no-repeat;
  background-size: 2.73rem 2.1rem;
}
.content .container .discount .discountGoods .privilege .hotSale a {
  display: block;
  width: 100%;
  height: 100%;
}
.content .container .discount .discountGoods .privilege .promotionToday {
  width: 2.75rem;
  height: 2.1rem;
  float: right;
  background: url('../../images/index/promotionToday.png') top center no-repeat;
  background-size: 2.75rem 2.1rem;
}
.content .container .discount .discountGoods .privilege .promotionToday a {
  display: block;
  width: 100%;
  height: 100%;
}
