.header {
  height: 1.12rem;
  width: 100%;
  margin: 0 auto;
  background-color: #e02341;
}
.header .header_content {
  height: 100%;
  line-height: 1.12rem;
  text-align: center;
  color: #ffffff;
  font-family: "Microsoft YaHei";
}
[data-dpr="1"] .header .header_content {
  font-size: 18px;
}
[data-dpr="2"] .header .header_content {
  font-size: 36px;
}
[data-dpr="3"] .header .header_content {
  font-size: 54px;
}
.content {
  width: 100%;
}
.content .kinds {
  height: 1.2rem;
  width: 100%;
  background: #f5f5f5;
  border-bottom: solid #e8e8e8 1px;
}
.content .kinds ul.kind_data {
  width: 100%;
  height: 100%;
  line-height: 1.2rem;
}
.content .kinds ul.kind_data li {
  width: 16.66%;
  float: left;
  text-align: center;
}
.content .kinds ul.kind_data li a {
  color: #1a1a1a;
  text-align: center;
  font-family: "Microsoft YaHei";
}
[data-dpr="1"] .content .kinds ul.kind_data li a {
  font-size: 18px;
}
[data-dpr="2"] .content .kinds ul.kind_data li a {
  font-size: 36px;
}
[data-dpr="3"] .content .kinds ul.kind_data li a {
  font-size: 54px;
}
.content .classify_detail_box {
  width: 92%;
  padding: 0.4rem;
}
.content .classify_detail_box .goods_detail {
  padding-top: 0.46rem;
}
.content .classify_detail_box .goods_detail ul.classify_detail {
  width: 100%;
}
.content .classify_detail_box .goods_detail ul.classify_detail li {
  height: 3.3rem;
  width: 8.72rem;
  padding: 0.64rem;
  border-bottom: solid #e8e8e8 1px;
}
.content .classify_detail_box .goods_detail ul.classify_detail li .goodsImg {
  float: left;
  height: 3rem;
  width: 3.15rem;
}
.content .classify_detail_box .goods_detail ul.classify_detail li .goodsImg img {
  width: 100%;
  height: 100%;
}
.content .classify_detail_box .goods_detail ul.classify_detail li .goodsImgRight {
  height: 2.46rem;
  width: 5.92rem;
  float: right;
}
.content .classify_detail_box .goods_detail ul.classify_detail li .goodsImgRight span.chandi {
  display: block;
  color: #999999;
  font-size: 22px;
  padding-top: 0.2rem;
}
.content .classify_detail_box .goods_detail ul.classify_detail li a {
  color: #1a1a1a;
}
[data-dpr="1"] .content .classify_detail_box .goods_detail ul.classify_detail li a {
  font-size: 14px;
}
[data-dpr="2"] .content .classify_detail_box .goods_detail ul.classify_detail li a {
  font-size: 28px;
}
[data-dpr="3"] .content .classify_detail_box .goods_detail ul.classify_detail li a {
  font-size: 42px;
}
