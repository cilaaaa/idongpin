.header {
  height: 1.18rem;
  width: 100%;
  margin: 0 auto;
  background-color: #e02341;
}
.header .header_content {
  height: 100%;
  line-height: 1.18rem;
  text-align: center;
  color: #ffffff;
  font-family: "Microsoft YaHei";
}
[data-dpr="1"] .header .header_content {
  font-size: 18px;
}
[data-dpr="2"] .header .header_content {
  font-size: 36px;
}
[data-dpr="3"] .header .header_content {
  font-size: 54px;
}
.content {
  width: 100%;
  margin: 0 auto;
  margin-bottom: 1.5rem;
}
.content .kinds {
  height: 1.2rem;
  width: 100%;
  background: #f5f5f5;
  border-bottom: solid #e8e8e8 2px;
}
.content .kinds ul.kind_data {
  width: 100%;
  height: 100%;
  line-height: 1.2rem;
}
.content .kinds ul.kind_data li {
  width: 16.66%;
  float: left;
  text-align: center;
}
.content .kinds ul.kind_data li a {
  color: #1a1a1a;
  text-align: center;
  font-family: "Microsoft YaHei";
}
[data-dpr="1"] .content .kinds ul.kind_data li a {
  font-size: 18px;
}
[data-dpr="2"] .content .kinds ul.kind_data li a {
  font-size: 36px;
}
[data-dpr="3"] .content .kinds ul.kind_data li a {
  font-size: 54px;
}
.content .classify_detail_box {
  width: 100%;
}
.content .classify_detail_box ul.classify_detail {
  width: 100%;
}
.content .classify_detail_box ul.classify_detail li {
  height: 3.3rem;
  width: 93.6%;
  padding-left: 0.64rem;
  border-bottom: solid #e8e8e8 2px;
}
.content .classify_detail_box ul.classify_detail li .goods_detail .goodsImg {
  float: left;
  height: 2.46rem;
  width: 2.46rem;
  margin-top: 0.4rem;
}
.content .classify_detail_box ul.classify_detail li .goods_detail .goodsImg img {
  width: 100%;
  height: 100%;
}
.content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight {
  height: 3.3rem;
  width: 5.86rem;
  float: left;
  margin-left: 0.3rem;
}
.content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight span.chandi {
  display: block;
  color: #999999;
  padding-top: 0.2rem;
}
[data-dpr="1"] .content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight span.chandi {
  font-size: 11px;
}
[data-dpr="2"] .content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight span.chandi {
  font-size: 22px;
}
[data-dpr="3"] .content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight span.chandi {
  font-size: 33px;
}
.content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight a {
  color: #1a1a1a;
}
[data-dpr="1"] .content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight a {
  font-size: 15px;
}
[data-dpr="2"] .content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight a {
  font-size: 30px;
}
[data-dpr="3"] .content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight a {
  font-size: 45px;
}
.content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight .goodsName {
  margin-top: 0.4rem;
}
.content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight .goodsFooter {
  height: 0.84rem;
  line-height: 0.84rem;
  margin-top: 0.2rem;
  width: 100%;
}
.content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight .goodsFooter img.shoppingTrolley {
  float: right;
  width: 0.78rem;
  height: 0.78rem;
}
.content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight .goodsFooter span.goodsPrice {
  color: #e02341;
  font-weight: bold;
}
[data-dpr="1"] .content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight .goodsFooter span.goodsPrice {
  font-size: 15px;
}
[data-dpr="2"] .content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight .goodsFooter span.goodsPrice {
  font-size: 30px;
}
[data-dpr="3"] .content .classify_detail_box ul.classify_detail li .goods_detail .goodsImgRight .goodsFooter span.goodsPrice {
  font-size: 45px;
}
