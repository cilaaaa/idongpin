@themeColor: #e02341;
.font-size(@font-size){
	[data-dpr="1"] & {
		font-size: @font-size;
	}
	[data-dpr="2"] & {
		font-size:@font-size*2;
	}
	[data-dpr="3"] & {
		font-size:@font-size*3;
	}
}
.font-family{
	font-family: "Microsoft YaHei";
}

.header{
	width: 100%;
	height: 1.12rem;
	background: @themeColor;
	box-sizing: border-box;
	padding-top: 0.18rem;
	.header_content{
		width: 10rem;
		height: 0.74rem;
		marign: 0 auto;
		.location{
			width: 2.77rem;
			height: 0.74rem;
			float: left;
			.location_icon{
				wdith: 0.48rem;
				height: 0.6rem;
				float: left;
				margin-left: 0.42rem;
				margin-top: 0.04rem;
			}
			.location_address{
				width: 1.07rem;
				height: 0.74rem;
				line-height: 0.74rem;
				float: left;
				color: #ffffff;
				.font-size(17px);
				.font-family;
				margin-left: 0.11rem;
			}
			.address_dropdown{
				width: 0.38rem;
				height: 0.2rem;
				float: left;
				margin-top: 0.3rem;
			}
		}
		.search_box{
			width: 5.66rem;
			height: 0.74rem;
			line-height: 0.74rem;
			float: left;
			background: #b31c34;
			border-radius: 0.05rem;
			.search_icon{
				width: 0.44rem;
				height: 0.44rem;
				float: left;
				margin-left: 0.2rem;
				margin-top: 0.15rem;
			}
			.search_keyword{
				float: left;
				margin-left: 0.4rem;
				color: #ffffff;
				.font-size(17px);
				.font-family;
			}
		}
		.news{
			width: 1.57rem;
			height: 0.74rem;
			float: left;
			.news_icon{
				width: 0.63rem;
				height: 0.63rem;
				margin-left: 0.31rem;
				margin-top: 0.04rem;
				position: relative;
				.news_pic{
					width: 0.63rem;
					height: 0.63rem;
				}
				.news_count{
					width: 0.42rem;
					height: 0.42rem;
					text-align: center;
					line-height: 0.42rem;
					color: #b31c34;
					.font-size(12px);
					.font-family;
					position: absolute;
					left: 0.47rem;
					top: -0.14rem;
					background: url('../../images/index/newsCount_bg.png') top center no-repeat;
					background-size: 0.42rem 0.42rem;
				}
			}
		}
	}
}

.content{
	width: 100%;
	.container{
		width: 10rem;
		margin: 0 auto;
		.slider{
			width: 10rem;
			img{
				width: 10rem;
			}
		}
	}
}
