.font-size(@font-size){
    [data-dpr="1"] & {
        font-size: @font-size;
    }
    [data-dpr="2"] & {
        font-size:@font-size*2;
    }  
    [data-dpr="3"] & {
        font-size:@font-size*3;
    }
}

.header{
    height: 1.12rem;
    width: 100%;
    margin: 0 auto;
    background-color: #e02341;
    .header_content {
        height: 100%;
        line-height: 1.12rem;
        text-align: center;
        color: #ffffff;
        .font-size(18px);
        font-family: "Microsoft YaHei";
    }
}
.content{
    width: 100%;
    .kinds {
        height: 1.2rem;
        width: 100%;
        background: #f5f5f5;
        border-bottom: solid #e8e8e8 1px;
        ul.kind_data {
            width: 100%;
            height: 100%;
            line-height: 1.2rem;
            li {
                width: 16.66%;
                float: left;
                text-align: center;
                a{
                    color: #1a1a1a;
                    text-align: center;
                    .font-size(18px);
                    font-family: "Microsoft YaHei";
                }
            }       
        }
    }
    .classify_detail_box {
        width: 92%;
        padding: 0.4rem;
        .goods_detail {
            padding-top: 0.46rem;
            ul.classify_detail {
                width: 100%;
                li{
                    height: 3.3rem;
                    width: 8.72rem;
                    padding: 0.64rem;
                    border-bottom: solid #e8e8e8 1px;
                    .goodsImg {
                        float: left;
                        height: 3rem;
                        width: 3.15rem;
                        img{
                            width: 100%;
                            height: 100%;
                        }
                    }
                    .goodsImgRight {
                        height: 2.46rem;
                        width: 5.92rem;
                        float: right;
                        span.chandi {
                            display: block;
                            color: #999999;
                            font-size: 22px;
                            padding-top: 0.2rem;
                        }
                    }
                    a{
                        color: #1a1a1a; 
                        .font-size(14px);
                    }
                }
            }
        }   
    }
        
}


