html{
    width: 100%;
    height: 100%;
}

body{
    width: 100%;
    height: 100%;
   // background: url('../../images/auth/bg_pic.png') top center no-repeat ;
    background-size: 100% 100%;
    background-attachment: fixed;
}

.registe_content{
    width: 9rem;
    height: 14rem;
    margin: 0 auto;
    box-sizing: border-box;
    padding-top: 1.5rem;
}

.go_login{
    width: 9rem;
    height: 1rem;
    line-height: 1rem;
    text-align: right;
    position:absolute;
    top: 0.5rem;
    a{
        color: #666666;
        .font-size(16px);
        font-family: "Microsoft YaHei";
    }
}

.company_logo{
    width: 4rem;
    margin: 0 auto;
    img{
        width: 4rem;
    }
}

.form_control{
    margin-top: 1rem;
    font-family: "Microsoft YaHei";
    .font-size(15px);
    .verification_code{
        width: 64%;
        height: 1.1rem;
        border-bottom: 1px solid #bcbcbc;
        line-height: 1.1rem;
        color: #4d4d4d;        
        float: left;
        .code_icon{
            display: block;
            width: 2.4rem;
            color: #4d4d4d;
            font-family: "Microsoft YaHei";
            float: left;
            text-align: left;
        }     
        .code_input{
            width: 3rem;
            height: 1rem;
            border: none;
            background: none;
            box-sizing: border-box;
            float: left;
            height: 100%;
            width: 55%;
            .font-size(15px);
            color: #4d4d4d;        
            &::-webkit-input-placeholder{
                color: #cccccc;
            }
        }
    }
    .phone_number,.user_pwd,.user_pwd_confirm,.salesperson{
        width: 9rem;
        height: 1.1rem;
        border-bottom: 1px solid #bcbcbc;
        line-height: 1.1rem;
        color: #4d4d4d;       
        .font-size(15px);
        .showPwd{
            display: block;
            width: 0.8rem;
            height: 1.04rem;
            line-height: 1.04rem;
            float: left;
            text-align: center;
        }
        .user_icon,.pwd_icon,.pwd_icon,.mysaler,.code_icon{
            display: block;
            width: 2.4rem;
            color: #4d4d4d;
            font-family: "Microsoft YaHei";
            float: left;
            text-align: left;
        }
        .number_input,.pwd_input,.pwd_confirm_input,.mysaler_input{
            border: none;
            background: none;
            box-sizing: border-box;
            float: left;
            width: 64%;
            height: 100%;
            color: #666666; 
            .font-size(15px);      
            &::-webkit-input-placeholder{
                color: #cccccc;
            }
        }
    } 
     
    .get_code{
        width: 35%;
        height: 1.1rem;
        line-height: 1.1rem;
        float: right;
        text-align: center;
        border: 1px solid #bcbcbc;
        background: #dadada;
        color: #999999;
        .font-size(15px);
    } 
    

    .register{
        width: 9rem;
        height: 1.25rem;
        margin-top: 0.5rem;
        .register_btn{
            display: block;
            width: 9rem;
            height: 1.25rem;
            margin: 0 auto;
            line-height: 1.25rem;
            text-align: center;
            border-radius: 10px;
            color: #ffffff;
            background: none;
            border: none;
            .font-size(18px);
            background: #e31e3c;
            font-family: "Microsoft YaHei";
        }
    }
    
    .user_agreement {
    margin: 0 auto;
    width: 100%;
    margin-top: 1.75rem;
    .font-size(12px);
    text-align: center;
    color: #999999;
        a#agreement {
            color: #00aad9;
        }
    }
}