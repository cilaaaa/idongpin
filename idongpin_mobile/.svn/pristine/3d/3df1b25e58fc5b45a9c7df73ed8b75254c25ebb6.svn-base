.font-size(@font-size){
    [data-dpr="1"] & {
        font-size: @font-size;
    }
    [data-dpr="2"] & {
        font-size:@font-size*2;
    }  
    [data-dpr="3"] & {
        font-size:@font-size*3;
    }
}

@font-face {
    font-family: 'verification_code';
    src: url('../../fonts/auth/verification_code.eot'); /* IE9*/
    src: url('../../fonts/auth/verification_code.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
