.font-size(@font-size){
    [data-dpr="1"] & {
        font-size: @font-size;
    }
    [data-dpr="2"] & {
        font-size:@font-size*2;
    }  
    [data-dpr="3"] & {
        font-size:@font-size*3;
    }
}

.header{
    height: 1.12rem;
    width: 100%;
    margin: 0 auto;
    background-color: #e02341;
    .header_content {
        height: 100%;
        line-height: 1.12rem;
        text-align: center;
        color: #ffffff;
        .font-size(18px);
        font-family: "Microsoft YaHei";
    }
}

.kinds {
    height: 1.2rem;
    width: 100%;
    ul.kind_data {
        width: 100%;
        height: 100%;
        line-height: 1.2rem;
        li {
            width: 16.66%;
            float: left;
            text-align: center;
             a{
                color: #1a1a1a;
                text-align: center;
                .font-size(18px);
                font-family: "Microsoft YaHei";
            }
        }       
    }
}

