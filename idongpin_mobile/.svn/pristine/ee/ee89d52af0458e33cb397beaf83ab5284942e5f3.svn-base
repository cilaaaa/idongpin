.font-size(@font-size){
	[data-dpr="1"] & {
		font-size: @font-size;
	}
	[data-dpr="2"] & {
		font-size:@font-size*2;
	}
	[data-dpr="3"] & {
		font-size:@font-size*3;
	}
}

@font-face {
	font-family: 'user';
    src: url('../../fonts/auth/user.eot'); /* IE9*/
    src: url('../../fonts/auth/user.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
    url('../../fonts/auth/user.woff') format('woff'), /* chrome、firefox */
    url('../../fonts/auth/user.ttf') format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
    url('../../fonts/auth/user.svg#iconfont') format('svg'); /* iOS 4.1- */
}

@font-face {
	font-family: 'pwd';
    src: url('../../fonts/auth/pwd.eot'); /* IE9*/
    src: url('../../fonts/auth/pwd.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
    url('../../fonts/auth/pwd.woff') format('woff'), /* chrome、firefox */
    url('../../fonts/auth/pwd.ttf') format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
    url('../../fonts/auth/pwd.svg#iconfont') format('svg'); /* iOS 4.1- */
}

@font-face {
	font-family: 'goto';
    src: url('../../fonts/auth/goto.eot'); /* IE9*/
    src: url('../../fonts/auth/goto.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
    url('../../fonts/auth/goto.woff') format('woff'), /* chrome、firefox */
    url('../../fonts/auth/goto.ttf') format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
    url('../../fonts/auth/goto.svg#iconfont') format('svg'); /* iOS 4.1- */
}

html{
	width: 100%;
	height: 100%;
}

body{
	width: 100%;
	height: 100%;
	background: #fafafa;
}

.content{
	width: 8.96rem;
	margin: 0 auto;
	box-sizing: border-box;
	padding-top: 0.53rem;
}

.go_register{
	width: 8.96rem;
	height: 0.94rem;
	line-height:0.94rem;
	text-align: right;
	a{
		color: #4d4d4d;
		.font-size(14px);
		font-family: "Microsoft YaHei";
		.goto{
			font-family: "goto";
		}
	}
}

.company_logo{
	width: 3.98rem;
	margin: 0 auto;
	img{
		width: 3.98rem;
	}
}

.form_control{
	margin-top: 2rem;
	.user_name{
		width: 9rem;
		height: 1.25rem;
		border-bottom: 1px solid #4d4d4d;
		text-align: center;
		line-height: 1.25rem;
		.user_con{
			color: #4d4d4d;
			.font-size(14px);
			font-family: "user";
		}
		.user_input{
			width: 6rem;
			height: 1rem;
			border: none;
			background: none;
			box-sizing: border-box;
			padding: 0px 20px;
			color: #ffffff;
			.font-size(14px);
			font-family: "Microsoft YaHei";
		}
	}
	.user_pwd{
		width: 9rem;
		height: 1.25rem;
		border-bottom: 1px solid #4d4d4d;
		text-align: center;
		line-height: 1.25rem;
		.pwd_icon{
			color: #4d4d4d;
			.font-size(14px);
			font-family: "pwd";
		}
		.pwd_input{
			width: 6rem;
			height: 1rem;
			border: none;
			background: none;
			box-sizing: border-box;
			padding: 0px 20px;
			color: #4d4d4d;
			.font-size(14px);
			font-family: "Microsoft YaHei";
		}
	}
	.forget_pwd{
		width: 9rem;
		height: 1.25rem;
		line-height: 1.25rem;
		text-align: right;
		color: #4d4d4d;
		.font-size(14px);
		font-family: "Microsoft YaHei";
	}
	.login{
		width: 9rem;
		height: 1.25rem;
		margin-top: 1.25rem;
		.login_btn{
			display: block;
			width: 7rem;
			height: 1.25rem;
			margin: 0 auto;
			line-height: 1.25rem;
			text-align: center;
			border-radius: 0.625rem;
			color: #ffffff;
			.font-size(16px);
			font-family: "Microsoft YaHei";
			background: none;
			border: none;
			background: #64bfc4;
		}
	}
}