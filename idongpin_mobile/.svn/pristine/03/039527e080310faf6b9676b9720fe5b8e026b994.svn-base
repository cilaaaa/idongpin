.font-family {
  font-family: "Microsoft YaHei";
}
body {
  background: #f5f5f5;
}
.header {
  width: 100%;
  background: #e02341;
}
.header .header_ttl {
  height: 1.18rem;
  line-height: 1.18rem;
  text-align: center;
  position: relative;
}
.header .header_ttl .page_ttl {
  color: #ffffff;
  font-family: "Microsoft YaHei";
}
[data-dpr="1"] .header .header_ttl .page_ttl {
  font-size: 18px;
}
[data-dpr="2"] .header .header_ttl .page_ttl {
  font-size: 36px;
}
[data-dpr="3"] .header .header_ttl .page_ttl {
  font-size: 54px;
}
.header .header_ttl .setting {
  position: absolute;
  right: 0.43rem;
}
.header .header_ttl .setting img {
  width: 0.46rem;
  height: 0.46rem;
}
.header .user_info {
  width: 10rem;
  height: 2.48rem;
  box-sizing: border-box;
  padding: 0 0.43rem;
}
.header .user_info .user_avatar {
  width: 1.6rem;
  height: 2.48rem;
  float: left;
}
.header .user_info .user_avatar img {
  width: 1.6rem;
  height: 1.6rem;
  border-radius: 0.8rem;
}
.header .user_info .user_about {
  width: 7.34rem;
  height: 2.48rem;
  float: right;
}
.header .user_info .user_about .user_name {
  width: 7.34rem;
  height: 0.71rem;
  line-height: 0.71rem;
  margin-top: 0.49rem;
}
.header .user_info .user_about .user_name .name {
  color: #ffffff;
  font-family: "Microsoft YaHei";
}
[data-dpr="1"] .header .user_info .user_about .user_name .name {
  font-size: 15px;
}
[data-dpr="2"] .header .user_info .user_about .user_name .name {
  font-size: 30px;
}
[data-dpr="3"] .header .user_info .user_about .user_name .name {
  font-size: 45px;
}
.header .user_info .user_about .user_name .user_kind {
  color: #ffffff;
  font-family: "Microsoft YaHei";
}
[data-dpr="1"] .header .user_info .user_about .user_name .user_kind {
  font-size: 12px;
}
[data-dpr="2"] .header .user_info .user_about .user_name .user_kind {
  font-size: 24px;
}
[data-dpr="3"] .header .user_info .user_about .user_name .user_kind {
  font-size: 36px;
}
.header .user_info .user_about .approve {
  display: inline-block;
  height: 0.4rem;
  line-height: 0.4rem;
  box-sizing: border-box;
  padding: 0 0.2rem;
  background: #ffbb45;
  border-radius: 0.2rem;
}
.header .user_info .user_about .approve img {
  width: 0.24rem;
  margin-left: 0.07rem;
}
.header .user_info .clear {
  clear: both;
}
.content {
  width: 100%;
  margin-bottom: 1.53rem;
}
.content .container {
  width: 10rem;
  margin: 0 auto;
}
