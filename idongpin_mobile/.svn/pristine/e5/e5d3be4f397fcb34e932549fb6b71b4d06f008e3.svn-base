.font-family {
  font-family: "Microsoft YaHei";
}
body {
  background: #f5f5f5;
}
.header {
  width: 100%;
  height: 1.18rem;
  line-height: 1.18rem;
  text-align: center;
  background: #e02341;
  position: relative;
}
.header .back {
  position: absolute;
  left: 0.43rem;
  display: inline-block;
  width: 0.32rem;
  height: 0.56rem;
  margin-top: 0.31rem;
}
.header .back img {
  width: 0.32rem;
  height: 0.56rem;
  float: left;
}
.header .page_ttl {
  color: #ffffff;
  font-family: "Microsoft YaHei";
}
[data-dpr="1"] .header .page_ttl {
  font-size: 18px;
}
[data-dpr="2"] .header .page_ttl {
  font-size: 36px;
}
[data-dpr="3"] .header .page_ttl {
  font-size: 54px;
}
.header .edit {
  position: absolute;
  right: 0.43rem;
  display: inline-block;
  height: 0.56rem;
  line-height: 0.56rem;
  margin-top: 0.31rem;
  color: #ffffff;
  font-family: "Microsoft YaHei";
}
[data-dpr="1"] .header .edit {
  font-size: 15px;
}
[data-dpr="2"] .header .edit {
  font-size: 30px;
}
[data-dpr="3"] .header .edit {
  font-size: 45px;
}
.content {
  width: 100%;
  margin-bottom: 1.53rem;
}
.content .container {
  width: 10rem;
  margin: 0 auto;
}
.content .container .goodsList {
  width: 10rem;
  background: #ffffff;
}
.content .container .goodsList .goods {
  width: 10rem;
  box-sizing: border-box;
  padding: 0 0.43rem;
  padding-top: 0.37rem;
  padding-bottom: 0.43rem;
  border-bottom: 0.02rem solid #e8e8e8;
}
