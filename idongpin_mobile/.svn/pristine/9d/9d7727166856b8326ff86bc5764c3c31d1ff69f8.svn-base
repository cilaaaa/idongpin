.font-size(@font-size){
    [data-dpr="1"] & {
        font-size: @font-size;
    }
    [data-dpr="2"] & {
        font-size:@font-size*2;
    }  
    [data-dpr="3"] & {
        font-size:@font-size*3;
    }
}

.header{
    height: 1.18rem;
    width: 100%;
    margin: 0 auto;
    background-color: #e02341;
    .header_content {
        height: 100%;
        line-height: 1.18rem;
        text-align: center;
        color: #ffffff;
        .font-size(18px);
        font-family: "Microsoft YaHei";
    }
}
.content{
    width: 100%;
    margin: 0 auto;
    margin-bottom: 1.5rem;
    .kinds {
        height: 1.2rem;
        width: 100%;
        background: #f5f5f5;
        border-bottom: solid #e8e8e8 2px;
        ul.kind_data {
            width: 100%;
            height: 100%;
            line-height: 1.2rem;
            li {
                width: 16.66%;
                float: left;
                text-align: center;
                a{
                    color: #1a1a1a;
                    text-align: center;
                    .font-size(18px);
                    font-family: "Microsoft YaHei";
                }
            }       
        }
    }
    .classify_detail_box {
        width: 100%;
        
            ul.classify_detail {
                width: 100%;
                li{
                    height: 2.46rem;
                    padding: 0.4rem;
                    padding-left: 0.64rem;
                    border-bottom: solid #e8e8e8 2px;
                    .goods_detail {
          
                        .goodsImg {
                            float: left;
                            height: 2.46rem;
                            width: 2.46rem;
                            img{
                                width: 100%;
                                height: 100%;
                            }
                        }
                        .goodsImgRight {
                            height: 2.46rem;
                            width: 5.86rem;
                            float: left;
                            margin-left: 0.3rem;
                            span.chandi {
                                display: block;
                                color: #999999;
                                font-size: 22px;
                                padding-top: 0.2rem;
                            }
                            a{
                                color: #1a1a1a; 
                                .font-size(15px);
                            }
                            .goodsFooter {
                                height: 0.84rem;
                                line-height: 0.84rem;
                                margin-top: 0.2rem;
                                width: 100%;
                                img.shoppingTrolley {
                                    float: right;
                                    width: 0.78rem;
                                    height: 0.78rem;
                                }
                                span.goodsPrice {
                                    color: #e02341;
                                    font-weight: bold;
                                    .font-size(15px);
                                }
                            }
                        }
                    
                }
            }
        }   
    }
        
}


